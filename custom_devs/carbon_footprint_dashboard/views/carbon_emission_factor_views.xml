<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_carbon_emission_factor_list" model="ir.ui.view">
        <field name="name">carbon.emission.factor.list</field>
        <field name="model">carbon.emission.factor</field>
        <field name="arch" type="xml">
            <list string="Emission Factors">
                <field name="name"/>
                <field name="category"/>
                <field name="unit_of_measure"/>
                <field name="factor"/>
            </list>
        </field>
    </record>

    <record id="view_carbon_emission_factor_form" model="ir.ui.view">
        <field name="name">carbon.emission.factor.form</field>
        <field name="model">carbon.emission.factor</field>
        <field name="arch" type="xml">
            <form string="Emission Factor">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="category"/>
                        <field name="unit_of_measure"/>
                        <field name="factor"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_carbon_emission_factor" model="ir.actions.act_window">
        <field name="name">Emission Factors</field>
        <field name="res_model">carbon.emission.factor</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
