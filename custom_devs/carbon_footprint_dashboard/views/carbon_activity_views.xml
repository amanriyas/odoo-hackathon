<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_carbon_activity_list" model="ir.ui.view">
        <field name="name">carbon.activity.list</field>
        <field name="model">carbon.activity</field>
        <field name="arch" type="xml">
            <list string="Carbon Activities">
                <field name="name"/>
                <field name="activity_date"/>
                <field name="emission_factor_id"/>
                <field name="quantity"/>
                <field name="emission_amount" sum="Total"/>
                <field name="project_id"/>
                <field name="source_document"/>
            </list>
        </field>
    </record>

    <record id="view_carbon_activity_form" model="ir.ui.view">
        <field name="name">carbon.activity.form</field>
        <field name="model">carbon.activity</field>
        <field name="arch" type="xml">
            <form string="Carbon Activity">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="activity_date"/>
                        <field name="emission_factor_id"/>
                        <field name="quantity"/>
                        <field name="emission_amount" readonly="1"/>
                        <field name="project_id"/>
                        <field name="source_document"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_carbon_activity_graph" model="ir.ui.view">
        <field name="name">carbon.activity.graph</field>
        <field name="model">carbon.activity</field>
        <field name="arch" type="xml">
            <graph string="Emissions" type="bar">
                <field name="activity_date" type="row"/>
                <field name="emission_amount" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="view_carbon_activity_pivot" model="ir.ui.view">
        <field name="name">carbon.activity.pivot</field>
        <field name="model">carbon.activity</field>
        <field name="arch" type="xml">
            <pivot string="Emissions Pivot">
                <field name="activity_date" type="row"/>
                <field name="emission_factor_id" type="col"/>
                <field name="emission_amount" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="action_carbon_activity" model="ir.actions.act_window">
        <field name="name">Activities</field>
        <field name="res_model">carbon.activity</field>
        <field name="view_mode">list,form,graph,pivot</field>
    </record>
</odoo>
