<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Carbon Activity List View -->
    <record id="view_carbon_activity_list" model="ir.ui.view">
        <field name="name">carbon.activity.list</field>
        <field name="model">carbon.activity</field>
        <field name="arch" type="xml">
            <list string="Carbon Activities" decoration-success="co2_saved &gt; 100" decoration-info="co2_saved &gt; 0" decoration-muted="activity_intent == 'emission'">
                <field name="name"/>
                <field name="activity_intent" widget="badge" decoration-success="activity_intent == 'reduction'" decoration-info="activity_intent == 'emission'"/>
                <field name="activity_type" widget="badge"/>
                <field name="activity_date"/>
                <field name="quantity"/>
                <field name="unit"/>
                <field name="emission_factor" optional="hide"/>
                <field name="emission_factor_source" widget="badge" optional="show"/>
                <field name="co2_generated" optional="hide"/>
                <field name="co2_saved" sum="Total CO2 Saved" decoration-bf="1"/>
                <field name="initiative_id"/>
                <field name="employee_id"/>
                <field name="source" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- Carbon Activity Form View -->
    <record id="view_carbon_activity_form" model="ir.ui.view">
        <field name="name">carbon.activity.form</field>
        <field name="model">carbon.activity</field>
        <field name="arch" type="xml">
            <form string="Carbon Activity">
                <sheet>
                    <!-- Title -->
                    <div class="oe_title">
                        <label for="activity_type" class="oe_edit_only"/>
                        <h1>
                            <field name="activity_type" placeholder="Select Activity Type..." options="{'no_open': True, 'no_create': True}"/>
                        </h1>
                    </div>

                    <group>
                        <group string="Activity Details">
                            <field name="activity_intent" widget="radio" options="{'horizontal': true}"/>
                            <field name="activity_date"/>
                            <field name="quantity"/>
                            <field name="unit"/>
                        </group>
                        <group string="CO2 Impact">
                            <field name="emission_factor" readonly="1"/>
                            <field name="emission_factor_source" widget="badge"/>
                            <field name="co2_generated" readonly="1" invisible="activity_intent == 'reduction'"/>
                            <field name="co2_saved" readonly="1" invisible="activity_intent == 'emission'"/>
                        </group>
                    </group>

                    <!-- Phase 4: API Integration Fields (Conditional) -->
                    <group string="Location Details" invisible="activity_type != 'electricity'">
                        <group>
                            <field name="location_country" readonly="1"/>
                            <field name="location_state"/>
                        </group>
                    </group>

                    <group string="Fuel Details" invisible="activity_type != 'fuel'">
                        <group>
                            <field name="fuel_type"/>
                        </group>
                    </group>

                    <group string="Vehicle Details" invisible="activity_type != 'travel'">
                        <group>
                            <field name="vehicle_make"/>
                            <field name="vehicle_model"/>
                        </group>
                        <group>
                            <field name="vehicle_year"/>
                        </group>
                    </group>

                    <group>
                        <group string="Associations">
                            <field name="initiative_id" options="{'no_create': True}"/>
                            <field name="employee_id" options="{'no_create': True}"/>
                        </group>
                        <group string="Additional Information">
                            <field name="name" readonly="1"/>
                            <field name="source" widget="badge"/>
                        </group>
                    </group>

                    <group string="Notes">
                        <field name="notes" nolabel="1" placeholder="Add any additional comments about this activity..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Carbon Activity Action -->
    <record id="action_carbon_activity" model="ir.actions.act_window">
        <field name="name">Carbon Activities</field>
        <field name="res_model">carbon.activity</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Log your first Carbon Activity
            </p>
            <p>
                Record carbon-generating or carbon-saving activities to track your environmental impact.
                The system will automatically calculate CO2 emissions based on activity type and quantity.
            </p>
        </field>
    </record>

</odoo>
