<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Carbon Initiative List View -->
    <record id="view_carbon_initiative_list" model="ir.ui.view">
        <field name="name">carbon.initiative.list</field>
        <field name="model">carbon.initiative</field>
        <field name="arch" type="xml">
            <list string="Carbon Initiatives" decoration-success="state=='completed'" decoration-info="state=='active'" decoration-muted="state in ('draft', 'cancelled')">
                <field name="name" string="Initiative Name"/>
                <field name="category" widget="badge"/>
                <field name="start_date"/>
                <field name="end_date" optional="hide"/>
                <field name="target_co2_reduction" string="Target (kg)" sum="Total Target"/>
                <field name="actual_co2_reduction" string="Actual (kg)" sum="Total Actual"/>
                <field name="progress_percentage" string="Progress (%)" widget="progressbar"/>
                <field name="state" widget="badge" decoration-success="state=='completed'" decoration-info="state=='active'" decoration-warning="state=='draft'" decoration-danger="state=='cancelled'"/>
                <field name="activity_count" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- Carbon Initiative Form View -->
    <record id="view_carbon_initiative_form" model="ir.ui.view">
        <field name="name">carbon.initiative.form</field>
        <field name="model">carbon.initiative</field>
        <field name="arch" type="xml">
            <form string="Carbon Initiative">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,active,completed"/>
                </header>
                <sheet>
                    <!-- Smart Buttons -->
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_activities" icon="fa-tasks" invisible="activity_count == 0">
                            <field string="Activities" name="activity_count" widget="statinfo"/>
                        </button>
                    </div>

                    <!-- Title -->
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="e.g., Paperless Office Challenge 2025"/>
                        </h1>
                    </div>

                    <!-- Main Fields -->
                    <group>
                        <group>
                            <field name="category"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                        </group>
                        <group>
                            <field name="target_co2_reduction"/>
                            <field name="actual_co2_reduction"/>
                            <field name="progress_percentage" widget="progressbar"/>
                            <field name="color" widget="color_picker" groups="base.group_no_one"/>
                        </group>
                    </group>

                    <!-- Notebook with Tabs -->
                    <notebook>
                        <!-- Description Tab -->
                        <page string="Description" name="description">
                            <field name="description" placeholder="Describe the goals, objectives, and scope of this initiative..."/>
                        </page>

                        <!-- Activities Tab -->
                        <page string="Carbon Activities" name="activities">
                            <field name="carbon_activity_ids" context="{'default_initiative_id': id}">
                                <list editable="bottom" decoration-success="co2_saved &gt; 0">
                                    <field name="activity_type"/>
                                    <field name="activity_date"/>
                                    <field name="quantity"/>
                                    <field name="unit"/>
                                    <field name="emission_factor"/>
                                    <field name="co2_generated"/>
                                    <field name="co2_saved" sum="Total CO2 Saved"/>
                                    <field name="employee_id"/>
                                </list>
                            </field>
                        </page>

                        <!-- Goals Tab -->
                        <page string="Goals &amp; Milestones" name="goals">
                            <field name="goal_ids" context="{'default_initiative_id': id}">
                                <list editable="bottom" decoration-success="state=='achieved'" decoration-danger="state=='missed'" decoration-warning="state=='in_progress'">
                                    <field name="name"/>
                                    <field name="target_date"/>
                                    <field name="target_co2_reduction"/>
                                    <field name="actual_co2_reduction"/>
                                    <field name="achievement_percentage" widget="progressbar"/>
                                    <field name="state" widget="badge"/>
                                    <field name="reward_points"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>

                <!-- Chatter -->
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Carbon Initiative Kanban View -->
    <record id="view_carbon_initiative_kanban" model="ir.ui.view">
        <field name="name">carbon.initiative.kanban</field>
        <field name="model">carbon.initiative</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column" quick_create="false">
                <field name="name"/>
                <field name="category"/>
                <field name="target_co2_reduction"/>
                <field name="actual_co2_reduction"/>
                <field name="progress_percentage"/>
                <field name="state"/>
                <field name="color"/>
                <field name="activity_count"/>
                <templates>
                    <t t-name="card">
                        <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_card oe_kanban_global_click">
                            <div class="o_dropdown_kanban dropdown">
                                <a class="dropdown-toggle o-no-caret btn" role="button" data-toggle="dropdown" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                    <span class="fa fa-ellipsis-v"/>
                                </a>
                                <div class="dropdown-menu" role="menu">
                                    <a role="menuitem" type="edit" class="dropdown-item">Edit</a>
                                    <a role="menuitem" type="delete" class="dropdown-item">Delete</a>
                                    <ul class="oe_kanban_colorpicker" data-field="color"/>
                                </div>
                            </div>

                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top mb8">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                </div>

                                <div class="o_kanban_record_body">
                                    <div class="row">
                                        <div class="col-6">
                                            <span class="badge badge-pill badge-info">
                                                <field name="category"/>
                                            </span>
                                        </div>
                                        <div class="col-6 text-right">
                                            <span class="badge badge-pill badge-secondary" title="Activities">
                                                <i class="fa fa-tasks"/> <field name="activity_count"/>
                                            </span>
                                        </div>
                                    </div>

                                    <div class="mt8">
                                        <span title="Target CO2 Reduction">
                                            ðŸŽ¯ <strong><field name="target_co2_reduction"/> kg</strong>
                                        </span>
                                    </div>

                                    <div class="mt4">
                                        <span title="Actual CO2 Reduction">
                                            âœ… <field name="actual_co2_reduction"/> kg
                                        </span>
                                    </div>

                                    <div class="mt8">
                                        <field name="progress_percentage" widget="progressbar" title="Progress"/>
                                    </div>
                                </div>

                                <div class="o_kanban_record_bottom mt8">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="start_date" widget="date"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Carbon Initiative Action -->
    <record id="action_carbon_initiative" model="ir.actions.act_window">
        <field name="name">Carbon Initiatives</field>
        <field name="res_model">carbon.initiative</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Carbon Reduction Initiative
            </p>
            <p>
                Track your organization's environmental programs and measure their impact on carbon emissions.
                Set targets, log activities, and watch your progress toward Net Zero 2050!
            </p>
        </field>
    </record>

</odoo>
